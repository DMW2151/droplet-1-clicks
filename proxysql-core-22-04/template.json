{
  "variables": {
    "do_api_token": "{{env `DIGITALOCEAN_API_TOKEN`}}",
    "image_name": "proxysql-core-22-04-snapshot-{{timestamp}}",
    "application_name": "ProxySQL",
    "application_version": "2.5.5"
  },
  "sensitive-variables": [
    "do_api_token"
  ],
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `do_api_token`}}",
      "image": "ubuntu-22-04-x64",
      "region": "nyc3",
      "size": "s-1vcpu-1gb",
      "ssh_username": "root",
      "snapshot_name": "{{user `image_name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "cloud-init status --wait"
      ]
    },
    {
      "type": "file",
      "source": "proxysql-core-22-04/files/etc/",
      "destination": "/etc/"
    },
    {
      "type": "file",
      "source": "common/files/var/",
      "destination": "/var/"
    },
    {
      "type": "file",
      "source": "common/files/var/lib/digitalocean/application.info",
      "destination": "/var/lib/digitalocean/application.info"
    },
    {
      "type": "shell",
      "environment_vars": [
        "application_name={{user `application_name`}}",
        "application_version={{user `application_version`}}",
        "DEBIAN_FRONTEND=noninteractive",
        "LC_ALL=C",
        "LANG=en_US.UTF-8",
        "LC_CTYPE=en_US.UTF-8"
      ],
      "scripts": [
        "proxysql-core-22-04/scripts/010-proxysql.sh",
        "proxysql-core-22-04/scripts/014-ufw-proxysql.sh",
        "common/scripts/020-application-tag.sh",
        "common/scripts/900-cleanup.sh"
      ]
    }
  ]
}